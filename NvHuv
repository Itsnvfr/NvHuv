-- [[ CONFIGURATION ]]
local Config = {
    Aimbot = {Enabled = false, Smooth = 0.85, FOV = 100, Team = true, Wall = true}, -- Very smooth per your request
    Silent = {Enabled = false, HitChance = 80, FOV = 120},
    Trigger = {Enabled = false, Delay = 0.1},
    Visuals = {Chams = false, Color = Color3.fromRGB(0, 255, 255)},
    UI = {Accent = Color3.fromRGB(0, 180, 255)}
}

-- [[ UI CONSTRUCT ]]
local ScreenGui = Instance.new("ScreenGui", game:GetService("CoreGui"))
local Main = Instance.new("Frame", ScreenGui)
Main.Name = "GlassPremium"
Main.Size = UDim2.new(0, 750, 0, 500) -- Significantly Larger
Main.Position = UDim2.new(0.5, -375, 0.5, -250)
Main.BackgroundColor3 = Color3.fromRGB(12, 12, 12)
Main.BackgroundTransparency = 0.2
Main.BorderSizePixel = 0
Main.Active = true
Main.Draggable = true

local Corner = Instance.new("UICorner", Main)
Corner.CornerRadius = UDim.new(0, 15)

-- Sidebar
local Sidebar = Instance.new("Frame", Main)
Sidebar.Size = UDim2.new(0, 180, 1, 0) -- Wider Sidebar
Sidebar.BackgroundColor3 = Color3.fromRGB(8, 8, 8)
Sidebar.BackgroundTransparency = 0.4
local SideCorner = Instance.new("UICorner", Sidebar)

local NavList = Instance.new("UIListLayout", Sidebar)
NavList.Padding = UDim.new(0, 10)
NavList.HorizontalAlignment = Enum.HorizontalAlignment.Center

-- Main Content Container
local Container = Instance.new("Frame", Main)
Container.Position = UDim2.new(0, 200, 0, 20)
Container.Size = UDim2.new(1, -220, 1, -40)
Container.BackgroundTransparency = 1

-- [[ ANIMATION & BUTTON ENGINE ]]
local function CreateTab(name)
    local Page = Instance.new("ScrollingFrame", Container)
    Page.Size = UDim2.new(1, 0, 1, 0)
    Page.BackgroundTransparency = 1
    Page.Visible = false
    Page.ScrollBarThickness = 0
    Instance.new("UIListLayout", Page).Padding = UDim.new(0, 12)

    local Btn = Instance.new("TextButton", Sidebar)
    Btn.Size = UDim2.new(0, 150, 0, 50) -- Larger Buttons
    Btn.Text = name
    Btn.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
    Btn.TextColor3 = Color3.fromRGB(180, 180, 180)
    Btn.Font = Enum.Font.GothamBold
    Btn.TextSize = 18 -- Bigger Text
    local bCorner = Instance.new("UICorner", Btn)

    -- Hover Animations
    Btn.MouseEnter:Connect(function()
        game:GetService("TweenService"):Create(Btn, TweenInfo.new(0.3), {BackgroundColor3 = Config.UI.Accent, TextColor3 = Color3.fromRGB(255,255,255)}):Play()
    end)
    Btn.MouseLeave:Connect(function()
        game:GetService("TweenService"):Create(Btn, TweenInfo.new(0.3), {BackgroundColor3 = Color3.fromRGB(25, 25, 25), TextColor3 = Color3.fromRGB(180, 180, 180)}):Play()
    end)

    Btn.MouseButton1Click:Connect(function()
        for _, p in pairs(Container:GetChildren()) do p.Visible = false end
        Page.Visible = true
    end)
    return Page
end

local function AddToggle(parent, text, cfg, key)
    local TglBtn = Instance.new("TextButton", parent)
    TglBtn.Size = UDim2.new(1, 0, 0, 55) -- Large Toggle Button
    TglBtn.Text = text .. ": OFF"
    TglBtn.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
    TglBtn.TextColor3 = Color3.fromRGB(255, 80, 80)
    TglBtn.Font = Enum.Font.GothamBold
    TglBtn.TextSize = 16
    Instance.new("UICorner", TglBtn)

    TglBtn.MouseButton1Click:Connect(function()
        cfg[key] = not cfg[key]
        TglBtn.Text = text .. (cfg[key] and ": ON" or ": OFF")
        local targetColor = cfg[key] and Color3.fromRGB(80, 255, 80) or Color3.fromRGB(255, 80, 80)
        game:GetService("TweenService"):Create(TglBtn, TweenInfo.new(0.2), {TextColor3 = targetColor}):Play()
    end)
end

-- [[ TABS & FEATURES ]]
local AimTab = CreateTab("Aimbot")
AddToggle(AimTab, "Master Aimbot", Config.Aimbot, "Enabled")
AddToggle(AimTab, "Wall Check", Config.Aimbot, "Wall")
AddToggle(AimTab, "Team Check", Config.Aimbot, "Team")

local SilentTab = CreateTab("Silent Aim")
AddToggle(SilentTab, "Master Silent", Config.Silent, "Enabled")

local VisualTab = CreateTab("Visuals")
AddToggle(VisualTab, "Chams (ESP)", Config.Visuals, "Chams")

local SkinTab = CreateTab("Skins")
local SkinLoad = Instance.new("TextButton", SkinTab)
SkinLoad.Size = UDim2.new(1, 0, 0, 50)
SkinLoad.Text = "Execute Skinchanger"
SkinLoad.Font = Enum.Font.GothamBold
SkinLoad.TextSize = 16
Instance.new("UICorner", SkinLoad)

-- [[ LOGIC CORE ]]
local function GetTarget()
    local target, dist = nil, Config.Aimbot.FOV
    for _, v in pairs(game.Players:GetPlayers()) do
        if v ~= game.Players.LocalPlayer and v.Character and v.Character:FindFirstChild("Head") then
            if Config.Aimbot.Team and v.Team == game.Players.LocalPlayer.Team then continue end
            local pos, vis = workspace.CurrentCamera:WorldToViewportPoint(v.Character.Head.Position)
            local mag = (Vector2.new(pos.X, pos.Y) - Vector2.new(game.Players.LocalPlayer:GetMouse().X, game.Players.LocalPlayer:GetMouse().Y)).Magnitude
            if vis and mag < dist then
                target = v
                dist = mag
            end
        end
    end
    return target
end

-- Aimbot Loop
game:GetService("RunService").RenderStepped:Connect(function()
    if Config.Aimbot.Enabled then
        local t = GetTarget()
        if t then
            -- Low-Intensity Smoothness as requested
            local lerpAmount = 1 - Config.Aimbot.Smooth
            workspace.CurrentCamera.CFrame = workspace.CurrentCamera.CFrame:Lerp(CFrame.new(workspace.CurrentCamera.CFrame.Position, t.Character.Head.Position), lerpAmount / 5)
        end
    end
end)

-- Visuals Throttler
task.spawn(function()
    while task.wait(0.5) do
        if Config.Visuals.Chams then
            for _, p in pairs(game.Players:GetPlayers()) do
                if p ~= game.Players.LocalPlayer and p.Character then
                    local h = p.Character:FindFirstChild("Highlight") or Instance.new("Highlight", p.Character)
                    h.FillColor = Config.Visuals.Color
                    h.Enabled = true
                end
            end
        end
    end
end)

-- Toggle Menu
game:GetService("UserInputService").InputBegan:Connect(function(io, gpe)
    if not gpe and io.KeyCode == Enum.KeyCode.RightShift then
        Main.Visible = not Main.Visible
    end
end)

-- Initialize
Container:GetChildren()[1].Visible = true
print("Glass Hub V5 Loaded | Large UI Active")
